<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_dynamic_neutral80"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="Smart Safe Guard"
        android:textColor="#333333"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/btnBluetoothConnect"/>

    <Button
        android:id="@+id/btnBluetoothConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#2196F3"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:minHeight="48dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="BT 연결"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:maxLines="1"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvStatusPanel"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/btnBluetoothConnect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivStatusIcon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@android:drawable/ic_lock_lock"
                app:tint="#4CAF50" />

            <TextView
                android:id="@+id/tvStatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="SAFE CLOSED"
                android:textSize="24sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="#4CAF50" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/layoutLockControls"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/cvStatusPanel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnLock"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#2196F3"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:maxLines="1"
            android:text="LOCK SAFE"
            android:textSize="22sp"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="22sp"
            app:autoSizeMinTextSize="14sp"
            app:autoSizeStepGranularity="1sp"
            app:autoSizeTextType="uniform" />

        <Button
            android:id="@+id/btnZero"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:text="Z"
            android:textSize="14sp"
            android:textStyle="bold"
            android:maxLines="1"
            app:autoSizeMaxTextSize="20sp"
            app:autoSizeMinTextSize="14sp"
            app:autoSizeTextType="uniform"
            android:backgroundTint="#9E9E9E"
            android:insetTop="0dp"
            android:insetBottom="0dp" />

        <Button
            android:id="@+id/btnSettings"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:text="⚙"
            android:textSize="20sp"
            android:backgroundTint="#757575"
            android:insetTop="0dp"
            android:insetBottom="0dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvEnvLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Environment Status"
        android:textStyle="bold"
        android:textColor="#555555"
        app:layout_constraintTop_toBottomOf="@id/layoutLockControls"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/layoutEnvContainer"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tvEnvLabel">

        <include
            layout="@layout/item_env_card"
            android:id="@+id/cardTemp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="4dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardPressure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginHorizontal="4dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_menu_info_details"
                    app:tint="#555555" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Pressure"
                    android:textSize="12sp"
                    android:maxLines="1"
                    android:textColor="#888888" />

                <TextView
                    android:id="@+id/tvValPressure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="-"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:textColor="#333333" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <include
            layout="@layout/item_env_card"
            android:id="@+id/cardFlame"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="4dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/layoutEnvContainer"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Access Logs"
                android:textStyle="bold"
                android:textColor="#555555"/>

            <Button
                android:id="@+id/btnShareLog"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="SHARE"
                android:textSize="12sp"
                android:textStyle="bold"
                android:backgroundTint="#2196F3"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="8dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"/>

            <Button
                android:id="@+id/btnRefreshLog"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="CLEAR"
                android:textSize="12sp"
                android:textStyle="bold"
                android:backgroundTint="#F44336"
                android:textColor="#FFFFFF"
                android:insetTop="0dp"
                android:insetBottom="0dp"/>
        </LinearLayout>

        <ScrollView
            android:id="@+id/svLogContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:padding="10dp"
            android:layout_marginTop="0dp">

            <TextView
                android:id="@+id/tvLogResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="4dp"
                android:textColor="#666666" />
        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>